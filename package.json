{
  "name": "@stone-js/config",
  "version": "0.0.1",
  "description": "Fluent and simple API with deep dot access to manage configurations in JavaScript any project",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": "git@github.com:stonemjs/config.git",
  "homepage": "https://github.com/stonemjs/config#readme",
  "bugs": {
    "url": "https://github.com/stonemjs/config/issues"
  },
  "keywords": [
    "config",
    "Stone.js",
    "Dictionnary",
    "Dot notation",
    "Configuration",
    "Deep notation access"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/index.js"
    },
    "./pipes": {
      "types": "./dist/types/pipes.d.ts",
      "default": "./dist/pipes.js"
    },
    "./resolvers": {
      "types": "./dist/types/resolvers.d.ts",
      "default": "./dist/resolvers.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "types": "tsc",
    "lint": "standard src",
    "lint:fix": "standard --fix src tests",
    "lint:test": "standard --env jest tests",
    "predoc": "rimraf docs",
    "doc": "jsdoc src -r -a all -c jsdoc.json -R README.md -d docs/jsdoc",
    "doc:serve": "npm run doc && npx http-server docs/jsdoc -p 8081",
    "prebuild": "rimraf dist",
    "build": "npm run lint && rollup -c && npm run types",
    "release": "npm run test:text && npm run build && npm publish --access public",
    "local_publish": "npm run build && npm publish --registry http://localhost:4873/",
    "local_unpublish": "npm unpublish @stone-js/config -f --registry http://localhost:4873",
    "test": "npm run lint:test && jest",
    "test:cvg": "npm run lint:test && jest --coverage",
    "test:text": "npm run test:cvg -- --coverageReporters=text",
    "test:html": "npm run test:cvg -- --coverageReporters=html text",
    "test:lcov": "npm run test:cvg -- --coverageReporters=lcov text"
  },
  "peerDependencies": {
    "@stone-js/common": "^0.0.1",
    "@stone-js/pipeline": "^0.0.1"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/preset-env": "^7.22.20",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "babel-jest": "^29.7.0",
    "docdash": "^2.0.2",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "rimraf": "^5.0.5",
    "rollup": "^4.1.5",
    "rollup-plugin-node-externals": "^6.1.2",
    "standard": "^17.1.0",
    "typescript": "^5.2.2"
  },
  "standard": {
    "parser": "@babel/eslint-parser",
    "globals": [
      "it",
      "jest",
      "test",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
